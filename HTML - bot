<!DOCTYPE html>
<html lang="he">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voiceflow Chatbot</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdn.voiceflow.com/voiceflow-sdk.min.js"></script>
</head>
<body>
    <!-- Main content -->
    <h1>Voiceflow Image Upload Test</h1>
    <p>Interact with the chat widget to test image uploading.</p>

    <!-- Load the extensions file first -->
    <script type="module">
        import { ImageUploadExtension } from './extensions.js';

        (function(d, t) {
            var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
            v.onload = function() {
                window.voiceflow.chat.load({
                    verify: { projectID: '6775a419af88ef4857055875' },
                    url: 'https://general-runtime.voiceflow.com',
                    versionID: 'production',
                    voice: {
           	      url: "https://runtime-api.voiceflow.com"
          	    },
		    assistant: {
                      extensions: [
                        ImageUploadExtension,
                      ],
                    },
                    autoOpen: true
                });
                
                // Add a small delay before trying to open the chat
                setTimeout(() => {
                    if (window.voiceflow && window.voiceflow.chat) {
                        window.voiceflow.chat.open();
                    }
                }, 1000);
            };
            v.src = "https://cdn.voiceflow.com/widget-next/bundle.mjs"; 
            v.type = "text/javascript"; 
            s.parentNode.insertBefore(v, s);
        })(document, 'script');
    </script>
</body>
</html> 
